export async function getMenus() {
  const res = await fetch('/api/menus');
  return res.json();
}

export async function createMenu(data) {
  const res = await fetch('/api/menus', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data),
  });
  return res.json();
}

